/* 列表 */
.list {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}
.list .item {
  flex: 1;
  margin-right:48rpx;
  padding-bottom: 48rpx;
}
.list .item:nth-child(2n) {
  margin-right: 0rpx;
}
.list .item-card {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding: 24rpx;
  margin-top: 48rpx;
  color: #fff;
  background: #5CA3E1;
  box-shadow: 5rpx 5rpx 25rpx 5rpx #5CA3E1;
}
.item-name {
  font-size: 32rpx;
  font-weight: 300;
}
.item-name::first-letter {
  font-size: 40rpx;
  font-weight: 400;
  margin-right: 4rpx;
}
.item-tip {
  font-size: 28rpx;
  text-transform: Capitalize;
  margin-top: 20rpx;
  position: relative;
  margin-top: 10rpx;
}
.item-tip::first-letter {
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 1px;
}
.item-tip::before {
  content: "";
  position: absolute;
  display: block;
  width: 50rpx;
  height: 6rpx;
  background: #fff;
  bottom: 0;
  right: 0;
  opacity: 0.5;
}
.item-tip::after {
  content: "";
  position: absolute;
  display: block;
  width: 100rpx;
  height: 2rpx;
  background: #fff;
  bottom: 0;
  right: 40rpx;
  opacity: 0.3;
}
.list [class*="icon-"] {
	font-size: 52rpx;
  height: 60rpx;
  line-height: 60rpx;
}
