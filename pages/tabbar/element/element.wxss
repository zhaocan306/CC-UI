page {
  background: #ffffff;
}
/* 列表 */
.item-name {
  font-size: 32rpx;
  font-weight: 300;
}
.item-name::first-letter {
  font-size: 40rpx;
  font-weight: 400;
  margin-right: 4rpx;
}
.item-tip {
  font-size: 28rpx;
  text-transform: Capitalize;
  margin-top: 20rpx;
  position: relative;
}
.item-tip::first-letter {
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 2rpx;
}
.item-tip::before {
  content: "";
  position: absolute;
  display: block;
  width: 50rpx;
  height: 6rpx;
  background: #fff;
  bottom: 0;
  right: 0;
  opacity: 0.5;
}
.item-tip::after {
  content: "";
  position: absolute;
  display: block;
  width: 100rpx;
  height: 2rpx;
  background: #fff;
  bottom: 0;
  right: 40rpx;
  opacity: 0.3;
}
