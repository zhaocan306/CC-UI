.cc-nav-view {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 9999;
}
.cc-nav-fixed {
  position: fixed;
  left: 0;
}
.cc-nav-relative {
  position: relative;
}
.cc-nav-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cc-nav-title {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}
.cc-nav-active {
  transition: all 0.15s ease-in-out;
}
.cc-nav-slider {
  border-radius: 40rpx;
  position: absolute;
  left: 0;
  transition: all 0.15s ease-in-out;
  z-index: 0;
}