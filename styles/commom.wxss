/*
  初始化项目配置
*/
page {

  /* 标准色 */
	--red: #f4606c;
	--orange: #f37b1d;
	--yellow: #fbbd08;
	--olive: #8dc63f;
	--green: #64ce72;
	--cyan: #21ded5;
	--blue: #5CA3E1;
	--purple: #a88adb;
	--mauve: #cf6cdf;
	--pink: #ea7bba;
	--brown: #d5ab90;
	--grey: #a8b5bd;
	--black: #333333;
	--darkGray: #666666;
	--gray: #aaaaaa;
	--ghostWhite: #f1f1f1;
	--white: #ffffff;
  /* 莫兰迪色系 */
	--moLight1: #c7b8a1;
	--moLight2: #afb0b2;
	--moLight3: #939391;
	--moLight4: #7b8b6f;
	--moLight5: #c5b8a5;
	--moLight6: #b5c4b1;
	--moLight7: #8696a7;
	--moLight8: #9ca8b8;
	--moLight9: #656565;
	--moLight10: #965454;
	--moLight11: #7a7281;
	--moLight12: #a27e7e;
  --moLight13: #c7b49e;
  --moLight14: #b7b9ac;
  --moLight15: #96a48b;
  --moLight16: #cac3bb;
  /* 渐变色 */
	--gradualPick: linear-gradient(to right, #ff9569, #e92758);
	--gradualCyan: linear-gradient(45deg, #EEBD89, #D13ABD);
	--gradualPurple: linear-gradient(-90deg, #29bdd9, #276ace);
	--gradualYellow: linear-gradient(45deg, #6681ea, #7e43aa);
	--gradualEmerald: linear-gradient(45deg, #d0ffae, #34ebe9);
	--gradualGolden: linear-gradient(45deg, #EF33B1, #F6E6BC);
  --gradualViolet: linear-gradient(45deg, #0C7BB3, #F2BAE8);
  --ShadowSize: 5rpx 5rpx 10rpx 2rpx;

  background: #F8F9FD;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
}

view,
scroll-view,
image,
swiper,
button,
input,
textarea,
form,
label,
navigator  {
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
